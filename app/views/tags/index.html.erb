<h1>Listing tags</h1>

<table>
  <tr>
    <th>Tag</th>
    <th colspan="2"></th>
  </tr>

  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name %></td>
      </td>
      <td><%= link_to 'Show', tag %></td>
      <% if current_user.try(:admin?) %>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to 'Index', posts_path %>
</p>