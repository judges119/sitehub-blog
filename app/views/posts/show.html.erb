<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <% if @post.user != nil %>
    <%= @post.user.email %>
  <% else %>
    [User Deleted]
  <% end %>
</p>

<% if @post.user != nil %>
  <%= image_tag @post.user.gravatar_url(:default => "wavatar") %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
